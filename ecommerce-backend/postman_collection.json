                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cart/items/:itemId",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", "items", ":itemId"],
              "variable": [
                {
                  "key": "itemId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cart/items/:itemId",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", "items", ":itemId"],
              "variable": [
                {
                  "key": "itemId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "cart"]
            }
          }
        }
